<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <div class="col-6 offset-4">
        <h2>Signup for Airbnb</h2>
    </div>
    <div class="col-6 offset-3">
        
        <form action="/signup" method="post" novalidate class="needs-validation">
            <div class="mt-1">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="username" placeholder="Username" class="form-control" required>
                <div class="valid-feedback"> Valid Username </div>
                <div class="invalid-feedback">Username Already Exits</div>
            </div>

            <div class="mt-1">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" placeholder="mail" class="form-control" required>
                <div class="valid-feedback"> Valid email </div>
                <div class="invalid-feedback">Enter Email Correctly</div>
            </div>

            <div class="mt-1 mb-3">
                <label for="password" class="form-label">password</label>
                <input type="password" id="password" name="password" placeholder="Password" class="form-control" required>
            </div>
            <button class="btn btn-success mb-3">SignUp</button>

        </form>
    </div>
</div>