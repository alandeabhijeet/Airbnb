<% layout("/layouts/boilerplate.ejs") %>
<body>
  <H1>All Listings</H1> 
  <br>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <% for(let list of allListing){  %>
      
      <a href="/listings/<%=list._id %>" class="listings-link">
          <div class="listing_card card" style="width: 21rem;">
              
              <img src="<%= list.image.url %>" class="card-img-top" alt="..." style="height: 21rem;"  >
              <div class="card-img-overlay"></div>
              <div class="card-body">
                <p class="card-text">
                  <%= list.title %><br>
                  <% if (list.price !== null && list.price !== undefined) { %>
                    &#8377; <%= list.price.toLocaleString("en-IN") %>/day<br>
                  <% } else { %>
                    Price not available
                  <% } %>
                </p>
              </div>
          </div>
      </a>
      <% } %>
  </div>
</body>
